{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:nuxt/recommended",
    "@nuxtjs/eslint-config-typescript",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "@typescript-eslint"
  ],
  "rules": {
    "no-console": 0,
    "no-unused-vars": 0,
    "curly": ["error", "multi-line"],
    "vue/no-template-shadow": 0,
    "vue/multi-word-component-names": "off",
    "vue/no-multiple-template-root": "off"
  }
}
